---
import AnimatedAbout from './AnimatedAbout'
import GlitchText from '../../components/GlitchText'
import Statistics from './Statistics'
import Button from '../../components/Button'
import { Icon } from '@material-ui/core'

const RESUME_LINK =
  'https://drive.google.com/file/d/1qs5xsV1R8FYrXWO7E65yBHNjm7EK_Kpc/view'
---

<section id="about">
  <div class="m-auto max-w-[1140px] p-6 md:p-8">
    <GlitchText
      client:idle
      className="mb-4 text-center font-Montserrat text-3xl md:text-left md:text-4xl font-bold"
      as="h2"
      text="About Me"
    />
    <AnimatedAbout client:idle className="mb-12" />
    <Statistics client:idle className="mb-12" />
    <a
      class="flex items-center justify-center"
      href={RESUME_LINK}
      target="_blank"
    >
      <Button color="tertiary" className="text-xl">
        <Icon>download</Icon>
        Download Resume
      </Button>
    </a>
  </div>
</section>
